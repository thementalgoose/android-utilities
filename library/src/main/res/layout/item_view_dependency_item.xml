<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/clAboutThisAppDependencyMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:paddingStart="@dimen/aboutThisApp_edgePadding"
        android:paddingTop="@dimen/aboutThisApp_edgePaddingHalf"
        android:paddingEnd="@dimen/aboutThisApp_edgePadding"
        android:paddingBottom="@dimen/aboutThisApp_edgePaddingHalf">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAboutThisAppDependencyIcon"
            android:layout_width="@dimen/aboutThisApp_dependencyIconSize"
            android:layout_height="@dimen/aboutThisApp_dependencyIconSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tvAboutThisAppDependencyName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/aboutThisApp_edgePadding"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgAboutThisAppDependencyIcon"
            app:layout_constraintTop_toTopOf="@id/imgAboutThisAppDependencyIcon"
            tools:text="Realm" />

    <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/tvAboutThisAppDependencyAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tvAboutThisAppDependencyName"
            app:layout_constraintTop_toBottomOf="@id/tvAboutThisAppDependencyName"
            tools:text="Realm" />

    <TextView
            android:id="@+id/tvAboutThisAppDependencyUrl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/aboutThisApp_edgePaddingHalf"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@id/tvAboutThisAppDependencyAuthor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvAboutThisAppDependencyAuthor"
            app:layout_constraintTop_toTopOf="@id/tvAboutThisAppDependencyAuthor"
            tools:text="https://realm.io" />

</androidx.constraintlayout.widget.ConstraintLayout>